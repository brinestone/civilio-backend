{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Nitro",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/nitropack",
      "runtimeArgs": [
        "dev"
      ],
      "outputCapture": "std",
      "restart": true,
      "console": "internalConsole",
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}