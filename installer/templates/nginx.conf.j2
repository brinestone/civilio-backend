upstream knowage {
    server knowage:8080;
}

# Configuration for knowage server
server {
    listen 80;
    server_name {{ config['gateway.knowage']['sub_domain'] }}.{{ config['gateway']['domain'] }} www.{{ config['gateway.knowage']['sub_domain'] }}.{{ config['gateway']['domain'] }};
{% if config['gateway.nginx.https'] == True %}
    return 301 https://$host$request_uri;
}

server {
    listen 443 ssl;
    server_name {{ config['gateway.knowage']['sub_domain'] }}.{{ config['gateway']['domain'] }};

    ssl_certificate /etc/nginx/certs/{{ config['gateway.knowage']['sub_domain'] }}.{{ config['gateway']['domain'] }}.crt;
    ssl_certificate_key /etc/nginx/certs/{{ config['gateway.knowage']['sub_domain'] }}.{{ config['gateway']['domain'] }}.key;
{% endif %}
location / {
        proxy_pass http://knowage/knowage/;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}